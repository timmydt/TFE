generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id         Int     @id @default(autoincrement())
  username   String  @unique
  password   String
  mail       String  @unique
  first_name String?
  last_name  String?
  admin      Boolean
  caves      Cave[]
  notes      Note[]
}

model Cave {
  id        Int    @id @default(autoincrement())
  name      String
  creatorId Int
  creator   User   @relation(fields: [creatorId], references: [id])
  bottles   Wine[]

  @@index([creatorId], name: "creatorId")
}

model Wine {
  id          Int       @id @default(autoincrement())
  name        String
  best_before DateTime? @db.Date
  food        String?
  grapes      String?
  isPublic    Boolean
  maker       String?
  picture     String?
  year        Int?
  caves       Cave[]
}

model Note {
  id        Int       @id @default(autoincrement())
  note      String?
  picture   String?
  date      DateTime?
  creatorId Int
  creator   User      @relation(fields: [creatorId], references: [id])

  @@index([creatorId], name: "creatorId")
}
